{
  "name": "heroku-node-telegram-bot",
  "version": "1.0.4",
  "description": "Starter pack for running telegram bot on the Heroku using Node.js",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && node ./dist/src",
    "switch_to_dev": "export $(cat .env | xargs) && wget --spider https://api.telegram.org/bot$TOKEN/setWebhook?url= --delete-after && node index.js",
    "dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/src\""
  },
  "author": "Volodymyr Lut & Art Ginzburg",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.3",
    "node-telegram-bot-api": "^0.56.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.19",
    "@types/node-telegram-bot-api": "^0.56.0",
    "dotenv": "^16.0.0",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5"
  }
}
